#!/usr/bin/env bash

# SPDX-FileCopyrightText: 2024 3mdeb <contact@3mdeb.com>
#
# SPDX-License-Identifier: Apache-2.0

source $DTS_ENV
source $DTS_FUNCS
source $DTS_SUBS

trap : 2
trap : 3

while : ; do
  # Do some subscription routine each time menu is rendered:
  subscription_routine

  # Header should always be printed:
  show_header
  if [ -z "$DES_SUBMENU_ACTIVE" ]; then
    show_hardsoft_inf
    show_des_credentials
    show_ssh_info
    show_main_menu
  elif [ -n "$DES_SUBMENU_ACTIVE" ]; then
    show_des_submenu
  fi
  show_footer

  echo
  read OPTION
  echo

  # If OPTION is being matched with smth inside *_options functions the
  # functions return 0 and loop start over, if not: next *_options function is
  # being checked:
  if [ -z "$DES_SUBMENU_ACTIVE" ]; then
    main_menu_options $OPTION && continue
  elif [ -n "$DES_SUBMENU_ACTIVE" ]; then
    des_submenu_options $OPTION && continue
  fi

  footer_options $OPTION
done
